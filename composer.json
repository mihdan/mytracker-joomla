{
  "name": "vk/mytracker-joomla",
  "description": "Мультиплатформенная система аналитики и атрибуции для мобильных приложений и сайтов",
  "type": "joomla-plugin",
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "~3.5",
    "joomla/coding-standards": "~3.0@alpha",
    "vimeo/psalm": "^4.20",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "license": "GPL-2.0-or-later",
  "autoload": {
    "psr-4": {
      "Joomla\\Plugin\\System\\MyTracker\\Extension\\": "src/"
    }
  },
  "authors": [
    {
      "name": "VK Team",
      "email": "login@tracker.my.com"
    }
  ],
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "require": {
    "php": ">=7.4",
    "ext-json": "*"
  },
  "config": {
    "platform": {
      "php": "7.4"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=./phpcs.xml --colors",
    "phpcbf": "phpcbf --standard=./phpcs.xml",
    "psalm": "psalm --config=./psalm.xml"
  }
}
